<?xml version="1.0" encoding="UTF-8"?>
<div id="transView">
	<div class="title">
		<div class="f_l dyn_title" id="transHeader">
			<span id="transTitle">Transaktion Details</span>
		</div>
		<input type="button" class="f_r m2_l bold" value="Speichern" id="transBtnSave" />
		<input type="button" class="f_r m2_l" value="Drucken" id="transBtnPrint" />
		<input type="button" class="f_r" value="Abbrechen" id="transBtnClose" />
		<div class="clear"></div>
	</div>
	<table class="view m_t">
		<tr>
			<td>
				<label>Benutzer:</label>
				<div id="transUser" style="width:205px;"></div>
			</td>
			<td>
				<label>Monat:</label>
				<div>
					<select id="transMonth">%monthlist</select>
					<input type="text" id="transYear" value="%year" maxlength="4" style="width: 50px;" class="m2_l m_r" />
				</div>
			</td>
		</tr>
	</table>
	<table class="view m_t">
		<tr>
			<td>
				<label>Gesamtleistung:</label>
				<div id="lblTransTotal">-</div>
			</td>
			<td>
				<label>Gleitzeit:</label>
				<div id="lblTransFlexitime">-</div>
				<div id="lblFlexitimeBase">XXX</div>
			</td>
			<td>
				<label>Gleitzeitabbau:</label>
				<div id="lblTransFlexitimeMin">-</div>
			</td>
			<td>
				<label>Überstunden:</label>
				<div id="lblTransOvertime">-</div>
			</td>
			<td>
				<label>Überstundenabbau:</label>
				<div id="lblTransOvertimeMin">-</div>
			</td>
			<td>
				<label>Verloren:</label>
				<div id="lblTransDenied">-</div>
			</td>
			<td>
				<label>Konsistent:</label>
				<div id="lblTransConsistent" class="bold">-</div>
			</td>
		</tr>
	</table>
	<div class="section m_t"><label>Arbeitszeiten</label></div>
	<div class="bg3 p2 b_b">
		<div id="tabTransClockings" style="background: #FFF; height: 250px; overflow: auto;" class="b"></div>
	</div>
</div>