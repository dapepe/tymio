<?xml version="1.0" encoding="UTF-8"?>
<div id="addAbsence">
	<div class="title">
		<div class="f_l dyn_title" id="editHeader">
			<span id="editTitle">Eintrag hinzufügen</span>
		</div>
		<input type="button" class="f_r m2_l" value="Abbrechen" id="absenceBtnClose" />
		<input type="button" class="f_r m2_l bold" value="Speichern" id="absenceBtnSave" />
		<div class="clear"></div>
	</div>
	<table class="view m_t">
		<tr>
			<td>
				<label>Benutzer:</label>
				<div id="edtAbsenceUsers" class="f_l m2_r"></div>
			</td>
		</tr>
		<tr>
			<td>
				<label>Von:</label>
				<div id="absenceStartDbx"></div>
			</td>
			<td>
				<label>Typ:</label>
				<select id="absenceType">
					<option value="1">Ü-Abbau</option>
					<option value="2">Ü-Abbau (halbtags)</option>
					<option value="3">Urlaub</option>
					<option value="4">Urlaub (halbtags)</option>
					<option value="5">Krankheit</option>
					<option value="9">Berufsschule</option>
				</select>
			</td>
		</tr>
		<tr>
			<td>
				<label>Bis:</label>
				<div id="absenceEndDbx"></div>
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<label class="m_t">Kommentar:</label>
				<textarea style="height: 80px; width: 100%;" id="absenceComment"></textarea>
			</td>
		</tr>
	</table>
</div>